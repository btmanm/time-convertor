{
	"manifest_version": 2,
	"name": "Local Time Convertor",
	"description": "Show time in your local timezone",
	"version": "0.1",
	"icons": 
	{
		"16": "globe.png"
	},

	"content_scripts": 
	[
		{
			"matches": 
			[
				"*://*/*"
			],

			"js": 
			[
				"content.js"
			]
		}
	],

	"background": 
	{
		"scripts": 
		[
			"background.js"
		]
	},

	"permissions": 
	[
		"contextMenus"
	]
}